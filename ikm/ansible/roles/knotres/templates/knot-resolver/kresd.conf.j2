net.listen('{{ hostvars['knotres']['ansible_host'] }}', 53, { kind = 'dns' })

modules = {
        'hints > iterate',
        'stats',
        'predict',
        'cache',
        'policy'
}

cache.size = 100 * MB
cache.max_ttl(345600)

internalDomains = policy.todnames({'ikm.internal'})

policy.add(policy.suffix(policy.FLAGS({'CACHED'}), internalDomains))
policy.add(policy.suffix(policy.FLAGS({'NO_EDNS'}), internalDomains))
policy.add(policy.suffix(policy.STUB({'{{ hostvars['knotdns']['ansible_host'] }}@53'}), internalDomains))
