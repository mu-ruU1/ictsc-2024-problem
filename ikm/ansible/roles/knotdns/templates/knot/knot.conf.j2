server:
  rundir: /run/knot
  user: knot:knot
  automatic-acl: on
  listen: {{ hostvars['knotdns']['interface_ip'] | default(hostvars['knotdns']['ansible_host'], true) }}@53

log:
  - target: syslog
    any: info

database:
  storage: /var/lib/knot

template:
  - id: default
    storage: /var/lib/knot

zone:
  - domain: ikm.internal
    file: internal.ikm.zone
